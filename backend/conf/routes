# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#######
####### General #######
#######

###
#  tags:
#    - general
#  summary: Get application config
#  operationId: getConfiguration
#  responses:
#     200:
#       description: success
#       content:
#         application/json:
#           schema:
#             $ref: '#/components/schemas/models.ApplicationConfig'
###
GET /config             controllers.ApplicationController.getConfig

###
#  security:
#    - cookieAuth: []
#  tags: 
#    - general
#  responses:
#    200:
#      description: success
###
GET /messagingSocket    controllers.ApplicationController.messagingSocket

